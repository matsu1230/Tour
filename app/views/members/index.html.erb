<% @page_title = "会員名簿" %>

<h1><%= @page_title %></h1>

<p><%= link_to "会員の新規登録", :new_member %></p>

<% if @members.present? %>
<table class="list">
  <tr>
    <th>ID</th>
    <th>氏名</th>
    <th>住所</th>
    <th>操作</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
    <td align="right"><%= member.id %></td>
    <td><%= link_to member.fullname, member %></td>
    <td><%= member.address %></td>
    <td>
      <%= link_to "編集", [:edit, member] %> |
      <%= link_to "削除", member, method: :delete,
            confirm: "本当に削除しますか?" %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません。</p>
<% end %>
